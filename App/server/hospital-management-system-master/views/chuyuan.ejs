<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
    --><title>医生工作站</title>
    <link rel="stylesheet" type="text/css" href="/hosp/semantic.min.css" />
    <link rel="stylesheet" type="text/css" href="/hosp/default.css" />
    <link rel="stylesheet" type="text/css" href="/hosp/pandoc-code-highlight.css" />
    <!-- <link rel="stylesheet" type="text/css" href="style_02.css"> -->
    <script src="/hosp/jquery.min.js"></script>
</head>


<body>

<!-- <div class="ui horizontal divider">or</div> -->
<div class="ui container">
    <form class="ui form segment" action="/chuyuan" method="post">
        <h1> 病人： </h1>
        <div class="three fields">
            <div class="field">
                <label>病人姓名：</label>
                <input  value="<%=patient[0].name%>" readonly="readonly" type="text">
            </div>
            <div class="field">
                <label>病人编号：</label>
                <input  value="<%=patient[0].id%>" readonly="readonly" type="text">
            </div>
            <div class="field">
                <label>病人科室：</label>
                <input  value="<%=patient[0].diagnosis%>" readonly="readonly" type="text">
            </div>
        </div>
        <h1> 医嘱： </h1>
        <h3>病人住院费用总计<%=totalcost %></h3>
        <div> <a href="/profile">返回首页</a> </div>
        <table><tr style='background-color:#006633'>
                <th width="150" style="color:#ffff99">ID</th>
                <th width="150" style="color:#ffff99">Update</th>
                <th width="150" style="color:#ffff99">Username</th>
                <th width="150" style="color:#ffff99">Usertype</th>
                <th width="150" style="color:#ffff99">Details</th></tr>
            <% if (order) { %>
            <% order.forEach(function(user){ %>
            <tr>
                <th width="150"><a href="/nurorderdetail?id=<%= user.id %>"><%= user.id %></th>
                <th width="150"><a href="/nurorderdetail?id=<%= user.id %>"><%= user.patient_id %></th>
                <th width="150"><a href="/nurorderdetail?id=<%= user.id %>"><%= user.item_name %></th>
                <th width="150"><a href="/nurorderdetail?id=<%= user.id %>"><%= user.description %></th>
                <th width="150"><a href="/nurorderdetail?id=<%= user.id %>"><%= user.pinci %></th>
                <th width="150"><a href="/nurorderdetail?id=<%= user.id %>"><%= user.cost %></th>
                <th width="150"><a href="/nurorderdetail?id=<%= user.id %>"><%= user.status %></th>
            </tr>
            <% }) %>
            <% } %>
        </table>
        <button class="ui primary submit button">出院</button>
    </form>
    </br>


    <div> <a href="/profile">Go back</a> </div>
</div>


<script src="/hosp/semantic.min.js"></script>

<script>
    $('.ui.form')
        .form({
            fields: {
                name       : 'empty',
                gender     : 'empty',
                age        : 'empty',
                contact    : 'empty',
                address    : 'empty',
                registar   : 'empty',
                ward       : 'empty',
                speciality : 'empty'
                /*username : 'empty',
                password : ['minLength[6]', 'empty'],
                speciality   : ['minCount[2]', 'empty'],
                terms    : 'checked'*/
            }
        })
    ;
</script>


</body>
</html>




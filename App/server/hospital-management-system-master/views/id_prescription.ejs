<body>

  <!-- <div class="ui horizontal divider">or</div> -->

  <div class="ui container">

    <form class="ui form segment" action="/diagnose" method="POST">
    
      <h1>Patient list</h1>
      <!--
      <form action="/persons/search" method="post">
        姓名：<input type="text" name="s_id" value="" class="text"> &nbsp;&nbsp;
        年龄：<input type="text" name="s_name" value=""  class="text"> &nbsp;&nbsp;
        职业：<input type="text" name="s_type" value="" class="text"> &nbsp;&nbsp;
        <input type="submit" value="查询">
      </form>
      -->
      <table><tr style='background-color:#006633'>
          <th width="150" style="color:#ffff99">病人姓名</th>
          <th width="150" style="color:#ffff99">病人所在医院</th>
          <th width="150" style="color:#ffff99">时间</th>
          <th width="150" style="color:#ffff99">病人描述</th>
          <th width="150" style="color:#ffff99">挂号科室</th></tr>
          <% if (patient) { %>
          <% patient.forEach(function(user){ %>
        <tr>
          <th width="150"><a href="/diagnose?id=<%= user.rid %>"><%= user.pname %></th>
          <th width="150"><a href="/diagnose?id=<%= user.rid %>"><%= user.hname %></a></th>
          <th width="150"><a href="/diagnose?id=<%= user.rid %>"><%= user.bdate %></th>
          <th width="150"><a href="/diagnose?id=<%= user.rid %>"><%= user.description %></th>
          <th width="150"><a href="/diagnose?id=<%= user.rid %>"><%= user.officeName %></th>
          <th width="150"><a href="/laboratories?id=<%= user.rid %>">进行门诊</th>

        </tr>
          <% }) %>
          <% } %>
      </table>
      <h3><%=datastring %></h3>
      <div class="ui error message"></div>
    </form>
    <div> <a href="/profile">返回首页</a> </div>
  </div>
  <div class="ui footer container">
    <div class="ui divider"></div>
    <div class="ui two column grid">
      <div class="column">
        <p>
          &copy; 2020 Hospital XYZ, Welcome.
        </p>
      </div>
      <div class="right floated two wide column">
        <!--a href="#">Back to top</a -->
      </div>
    </div>
  </div>

  


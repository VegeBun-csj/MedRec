              <option value="nurse">Nurse</option>
            </select>
          </div> -->
          <div class="field">
            <div class="ui checkbox">
              <input class="hidden" tabindex="0" type="checkbox" name="remember" value="yes" /><label>Remember me</label>
            </div>
          </div>
          <div>
            <button class="ui fluid large primary submit button">Sign in</button>
          </div>
        </form>

        <div> <a id="goBack" href="/">Go back</a> </div>

      </div>
    </div>


    <script src="/hosp/semantic.min.js"></script>



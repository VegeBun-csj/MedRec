<body>

<!-- <div class="ui horizontal divider">or</div> -->

<div class="ui container">

    <form class="ui form segment" action="/tijian" method="POST">

        <h1>病人信息列表：</h1>

        <button class="ui primary submit button">体检</button>
        <div class="ui error message"></div>
    </form>
    <h3> 病人信息表 </h3>
    <form action="/newPatient" method="post">
        姓名：<input type="text" name="patientname" value="" class="text"> &nbsp;&nbsp;
        <input type="submit" value="查询">
    </form>
    </br>
    <h3><%=test %></h3>
    <div> <a href="/profile">返回首页</a> </div>
    <table><tr style='background-color:#006633'>
            <th width="150" style="color:#ffff99">病人编号</th>
            <th width="150" style="color:#ffff99">体检</th>
            <th width="150" style="color:#ffff99">病人姓名</th>
            <th width="150" style="color:#ffff99">病人症状</th>
            <th width="150" style="color:#ffff99">病人年龄</th></tr>
        <% if (patient) { %>
        <% patient.forEach(function(user){ %>
        <tr>
            <th width="150"><%= user.id %></th>
            <th width="150"><a href="/tijian?id=<%= user.id %>">体检</a></th>
            <th width="150"><%= user.username %></th>
            <th width="150"><%= user.symptoms %></th>
            <th width="150"><%= user.password %></th>
        </tr>
        <% }) %>
        <% } %>
    </table>

</div>




<script src="/hosp/semantic.min.js"></script>

<script>
    $('.ui.form')
        .form({
            fields: {
                name       : 'empty',
                gender     : 'empty',
                age        : 'empty',
                contact    : 'empty',
                address    : 'empty',
                supervisor : 'empty',
                ward       : 'empty'
                /*speciality : 'empty'*/
                /*username : 'empty',
                password : ['minLength[6]', 'empty'],
                speciality   : ['minCount[2]', 'empty'],
                terms    : 'checked'*/
            }
        })
    ;
</script>

</body>

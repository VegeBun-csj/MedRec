<body>

<!-- <div class="ui horizontal divider">or</div> -->

<div class="ui container">

    <form class="ui form segment" action="/diagnose" method="POST">
        <h1>请为病人做出诊断：</h1>
        <div class="two fields">
            <div class="field">
                <label>当前症状</label>
                <input type="text" value="<%=data%>" readonly="readonly">
            </div>
            <div class="field">
                <label>症状</label>
                <select class="ui dropdown" name="symptomId">
                    <% if (datas1) { %>
                    <% datas1.forEach(function(row){ %>
                    <option value="<%=row.symptomId%>"><%=row.symptomName%></option>
                    <% }) %>
                    <% } %>
                </select>
            </div>
        </div>
        <div class="two fields">
            <div class="field">
                <label>当前处方</label>
                <input type="text" value="<%=data4%>" readonly="readonly">
            </div>
            <div class="field">
                <label>处方</label>
                <select class="ui dropdown" name="mid">
                    <% if (datas2) { %>
                    <% datas2.forEach(function(row){ %>
                    <option value="<%=row.mid%>"><%=row.m_name%></option>
                    <% }) %>
                    <% } %>
                </select>
            </div>
        </div>
        <div class="two fields">
            <div class="field">
            </div>
            <div class="field">
                <button class="ui primary submit button">保存</button>
            </div>
        </div>

        <div class="ui error message"></div>
    </form>
    <div> <a href="/chongxintijian">导出病历</a> </div>
    <div> <a href="/hospitalA">上传</a> </div>
    <div> <a href="/profile">返回首页</a> </div>

</div>


<script src="/hosp/semantic.min.js"></script>

<script>
    $('.ui.form')
        .form({
            fields: {
                name       : 'empty',
                gender     : 'empty',
                age        : 'empty',
                contact    : 'empty',
                address    : 'empty',
                supervisor : 'empty',
                ward       : 'empty'
                /*speciality : 'empty'*/

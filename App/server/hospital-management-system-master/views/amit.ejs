<div class="ui container">

    <form class="ui form segment" action="/guahaowancheng" method="POST">

        <h1>进行门诊登记：</h1>

        <div class="three fields">

            <div class="field">
                <label>姓名</label>
                <input value="<%=datas[0].pname%>" name="name" type="text">
            </div>

            <div class="field">
                <label>年龄</label>
                <input value="<%=datas[0].age%>" name="age" type="text">
            </div>
        </div>

        <div class="three fields">

            <div class="field">
                <label>手机号码</label>
                <input value="<%=datas[0].telephone%>" name="phonenumber" type="text">
            </div>

            <div class="field">
                <label>身份证号</label>
                <input value="<%=datas[0].icd%>" name="idcard" type="text">
            </div>
        </div>

        <caption> <strong> 病情描述 </strong></caption>
        <div class="two fields">
            <div class="field">
                <label>病人描述</label>
                <textarea value="" name="symptoms" type="text"></textarea>
            </div>
        </div>

        <button class="ui primary submit button">登记</button>
        <div class="ui error message"></div>
    </form>

    <div> <a href="/profile">Go back</a> </div>

</div>




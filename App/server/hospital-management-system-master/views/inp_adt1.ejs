<body>

<!-- <div class="ui horizontal divider">or</div> -->

<div class="ui container">

    <form class="ui form segment" action="/inp_adt1" method="POST">

        <h1> 办理住院： </h1>
        <div class="three fields">

            <div class="field">
                <label>病人编号：</label>
                <input value="<%=datas[0].id%>" name="id" readonly="readonly" type="text">
            </div>

        </div>

        <div class="three fields">
            <div class="field">
                <label>病人姓名</label>
                <input value="<%=datas[0].username%>" name="name" readonly="readonly" type="text">
            </div>

        </div>

        <div class="two fields">
            <div class="field">
                <label>病人病情</label>
                <textarea readonly="readonly" type="text"><%=datas[0].symptoms%></textarea>
            </div>
        </div>

        <caption> <strong> 入院诊断 </strong></caption>
        <div class="two fields">
            <div class="field">
                <label>门诊诊断</label>
                <textarea  readonly="readonly" type="text"><%=datas[0].diagnosis%></textarea>
            </div>
            <div class="field">
                <label>入院诊断</label>
                <textarea  name="diagnosis" type="text"></textarea>
            </div>
        </div>

        <div class="three fields">

            <div class="field">
                <label>入院科室</label>
                <select class="ui dropdown" name="dept">
                    <% if (datas1) { %>
                    <% datas1.forEach(function(row){ %>
                    <option value="<%=row.officeName%>"><%=row.officeName%></option>
                    <% }) %>
                    <% } %>
                </select>
            </div>
        </div>


        <button class="ui primary submit button">保存</button>
        <div class="ui error message"></div>
    </form>


    <div> <a href="/profile">Go back</a> </div>
</div>

<script src="/hosp/semantic.min.js"></script>

<script>
    function act1(){
        document.frm.action = "/inp_adt1";
        document.frm.submit;
    }
    function act2(){
        document.frm.action = "/inp_adt2";
        document.frm.submit;
    }
</script>

</body>
</html>




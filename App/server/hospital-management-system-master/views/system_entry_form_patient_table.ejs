<body>

  <!-- <div class="ui horizontal divider">or</div> -->

  <div class="ui container">

    <form class="ui form segment" action="/newPatientProfile" method="POST">
    
      <h1>Fill the following form to add new "Patient" to the system</h1>

      <div class="three fields">

        <div class="field">
          <label>First Name</label>
          <input placeholder="Name" name="fname" type="text">
        </div>

        <div class="field">
          <label>Middle Name</label>
          <input placeholder="Name" name="mname" type="text">
        </div>

        <div class="field">
          <label>Last Name</label>
          <input placeholder="Name" name="lname" type="text">
        </div>      

      </div>

      <div class="three fields">

        <div class="field">
          <label>Date of birth</label>
          <input placeholder="Name" name="bdate" type="date">
        </div>

        <div class="field">
          <label>Date of Admission</label>
          <input placeholder="Name" name="adate" type="date">
        </div>

        <div class="field">
          <label>Gender</label>
          <select class="ui dropdown" name="gender">
            <option value="">Gender</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>

      </div>


      <div class="two fields">
        <div class="field">
          <label>Mobile No.</label>
          <input placeholder="Mobile No." name="mblnoOne" type="text">
        </div>

        <div class="field">
          <label>Mobile No.</label>
          <input placeholder="Mobile No." name="mblnoTwo" type="text">
        </div>

      </div>

      <caption> <strong> Present Address </strong></caption>
      <div class="five fields">
        <div class="field">
          <label>Street No</label>
          <input placeholder="Street No" name="streetno" type="text">
        </div>

        <div class="field">
          <label>Street Name</label>
          <input placeholder="Street Name" name="streetname" type="text">
        </div>

        <div class="field">
          <label>Area</label>
          <input placeholder="Area" name="area" type="text">
        </div>

        <div class="field">
          <label>Thana</label>
          <input placeholder="Thana" name="thana" type="text">
        </div>

        <div class="field">
          <label>District</label>
          <input placeholder="District" name="district" type="text">
        </div>

      </div>


      <caption> <strong> Permanent Address </strong></caption>
      <div class="five fields">
        <div class="field">
          <label>Street No</label>
          <input placeholder="Street No" name="pstreetno" type="text">
        </div>

        <div class="field">
          <label>Street Name</label>
          <input placeholder="Street Name" name="pstreetname" type="text">
        </div>

        <div class="field">
          <label>Area</label>
          <input placeholder="Area" name="parea" type="text">
        </div>

        <div class="field">
          <label>Thana</label>
          <input placeholder="Thana" name="pthana" type="text">
        </div>

        <div class="field">
          <label>District</label>
          <input placeholder="District" name="pdistrict" type="text">
        </div>

      </div>

        
      <div class="three fields">
        <div class="field">
          <label>Profession</label>
          <input placeholder="Street No" name="job" type="text">
        </div>

        <div class="field">
          <label>Amount Deposited</label>
          <input placeholder="Street Name" name="deposit" type="number">
        </div>

        <div class="field">
          <label>Admitted Ward</label>
          <input placeholder="Area" name="ward" type="number">
        </div>


      </div>
      
      <button class="ui primary submit button">Submit</button>
      <div class="ui error message"></div>
    </form>

    <div> <a href="/profile">Go back</a> </div>
    
  </div>

  

  <script src="semantic.min.js"></script>


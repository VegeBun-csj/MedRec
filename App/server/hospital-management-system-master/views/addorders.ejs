<body>

<!-- <div class="ui horizontal divider">or</div> -->

<div class="ui container">

    <form class="ui form segment" action="/addorders" method="POST">
        <h1> 病人： </h1>
        <div class="three fields">
            <div class="field">
                <label>病人姓名：</label>
                <input  value="<%=patient[0].name%>" readonly="readonly" type="text">
            </div>
            <div class="field">
                <label>病人编号：</label>
                <input  value="<%=patient[0].id%>" readonly="readonly" type="text">
            </div>
            <div class="field">
                <label>病人科室：</label>
                <input  value="<%=patient[0].diagnosis%>" readonly="readonly" type="text">
            </div>
        </div>
        <h1>新开医嘱：</h1>
        <div class="two fields">
            <div class="field">
                <label>项目名称</label>
                <input  name="item_name" type="text">
            </div>
        </div>

        <div class="two fields">
            <div class="field">
                <label>频次</label>
                <input  name="pinci" type="text">
            </div>
        </div>

        <div class="two fields">
            <div class="field">
                <label>医生说明</label>
                <input  name="description" type="text">
            </div>
        </div>

        <div class="two fields">
            <div class="field">
                <label>费用</label>
                <input  name="costs" type="number">
            </div>
        </div>

        <div class="two fields">
            <div class="field">
                <label>是否下达出院通知？</label>
                <select class="ui dropdown" name="chuyuan">
                    <option value="">选择是否出院</option>
                    <option value="是">是</option>
                    <option value="否">否</option>
                </select>
            </div>
        </div>



        <button class="ui primary submit button">提交此医嘱</button>
        <div class="ui error message"></div>
    </form>

    <div> <a href="/profile">返回首页</a> </div>

</div>



<script src="/hosp/semantic.min.js"></script>

<script>
    $('.ui.form')
        .form({
            fields: {
                name       : 'empty',
                gender     : 'empty',
                age        : 'empty',
                contact    : 'empty',
                address    : 'empty',
                supervisor : 'empty',
                ward       : 'empty'
                /*speciality : 'empty'*/
                /*username : 'empty',
                password : ['minLength[6]', 'empty'],
                speciality   : ['minCount[2]', 'empty'],
                terms    : 'checked'*/
            }

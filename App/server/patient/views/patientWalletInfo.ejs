    <script type="text/javascript">


    function chongzhi(){
        alert('dianle')
        var pid = $('input[name="pid"]').val();
        var amount =parseFloat($('input[name=amount]').val()) ;
        var password = $('input[name=password]').val();
        alert(pid);

        $.ajax({
            type: 'post',
            contentType: 'application/json;charset=utf-8',
            url: "chongzhi",
            data:'{"password":"'+password+'","amount":"'+amount+'","pid":"'+pid+'"}',
            success: function (result) {
                if (result.code === '200') {
                  
                   bootbox.alert(result.message);
                   setTimeout(function () {
                    window.location.reload();
                }, 2000);
                  
                }else{
                   
                    bootbox.alert(result.message);  
                    setTimeout(function () {
                    window.location.reload();
                }, 2000);
                 }
              
                    
            }

          

        });
      
    }

function changeWalletPassword()
{
   var pid = $('input[name="pid"]').val();
   var oldpassword = $('input[name=oldpassword]').val();
    var newPassword = $('input[name="newPassword"]').val();
    var newPassword_2 = $('input[name="newPassword_2"]').val();
    
    if(newPassword != newPassword_2)
    {
      bootbox.alert("新两次密码输入不一致！");
    }else{

      $.ajax({
            type: 'post',
            contentType: 'application/json;charset=utf-8',
            url: "changeWalletPassword",
            data:'{"oldpassword":"'+oldpassword+'","newPassword":"'+newPassword+'","pid":"'+pid+'"}',
            success: function (result) {
                if (result.code === '200') {
                  
                   bootbox.alert(result.message);
                   
                   setTimeout(function () {
                    window.location.reload();
                }, 2000);
                  
                }else{
                   
                    bootbox.alert(result.message);  
                    setTimeout(function () {
                    window.location.reload();
                }, 2000);
                 }
              
                    
            }

        });


    }



}


